
export PKG_CONFIG_PATH:=/public/home/lifei/xinzk/toolbox/grpc-old-install/lib/pkgconfig:/public/home/lifei/xinzk/toolbox/protoc/lib/pkgconfig
export PATH:=/public/home/lifei/xinzk/toolbox/grpc-old-install/bin:/public/home/lifei/xinzk/toolbox/protoc/bin:$(PATH)
export LD_LIBRARY_PATH:=/public/home/lifei/xinzk/toolbox/grpc-old-install/lib:/lib64:/public/home/lifei/xinzk/toolbox/protoc/lib:${LD_LIBRARY_PATH}

LDFLAGS = -L/usr/local/lib `pkg-config --libs protobuf grpc++`\
           -Wl,--no-as-needed -lgrpc++_reflection -Wl,--as-needed\
           -ldl

CXX = g++
CPPFLAGS += `pkg-config --cflags protobuf grpc`
CXXFLAGS += -std=c++11 -g

GRPC_CPP_PLUGIN = grpc_cpp_plugin
GRPC_CPP_PLUGIN_PATH ?= `which $(GRPC_CPP_PLUGIN)`

all: rdma-client-old rdma-server-old

rdma-client-old: mathtest.pb.o mathtest.grpc.pb.o client.o
	$(CXX) $^ $(LDFLAGS) -o $@

rdma-server-old: mathtest.pb.o mathtest.grpc.pb.o server.o
	$(CXX) $^ $(LDFLAGS) -o $@

%.grpc.pb.cc: %.proto
	protoc --grpc_out=. --plugin=protoc-gen-grpc=$(GRPC_CPP_PLUGIN_PATH) $<

%.pb.cc: %.proto
	protoc --cpp_out=. $<

clean:
	rm -f *.o *.pb.cc *.pb.h rdma-client-old rdma-server-old
